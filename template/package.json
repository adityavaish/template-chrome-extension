{
    "private": true,
    "name": "{{ name }}",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
        "build": "preact build --no-prerender",
        "serve": "preact build --no-prerender && preact serve --no-prerender",
        "dev": "preact watch --no-prerender",
        "lint": "eslint src"
    },
    "eslintConfig": {
        "extends": "eslint-config-synacor"
    },
    "eslintIgnore": [
        "build/*"
    ],
    "devDependencies": {
        "awesome-typescript-loader": "^5.2.1",
        "eslint": "^4.5.0",
        "eslint-config-synacor": "^1.1.0",
        "if-env": "^1.0.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "preact": "^8.5.2",
        "preact-cli": "^2.2.1",
        "preact-compat": "^3.17.0",
        "preact-render-to-string": "^4.1.0"
    }
}